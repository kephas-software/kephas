<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
      <RootNamespace>Kephas.Serialization.ServiceStack.Text</RootNamespace>
      <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
      <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
      <Version>4.1.0</Version>
      <AssemblyVersion>4.0.0.0</AssemblyVersion>
      <FileVersion>4.1.0.0</FileVersion>
      <Authors>Quartz Software SRL</Authors>
      <Company>Quartz Software SRL</Company>
      <Product>Kephas Framework</Product>
      <Description>Provides JSON and XML serialization infrastructure using the ServiceStack.Text implementation.</Description>
      <Copyright>Copyright Quartz Software SRL 2010-2017</Copyright>
      <PackageLicenseUrl>http://opensource.org/licenses/MIT</PackageLicenseUrl>
      <PackageProjectUrl>https://github.com/quartz-software/kephas</PackageProjectUrl>
      <PackageIconUrl>http://kephas-framework.com/Media/Default/Logo/kephas.logo.transparent.png</PackageIconUrl>
      <RepositoryUrl>https://github.com/quartz-software/kephas</RepositoryUrl>
      <RepositoryType>github</RepositoryType>
      <PackageTags>kephas framework serialization json servicestack quartz-software</PackageTags>
      <PackageReleaseNotes>
          Check the documentation and the samples from https://github.com/quartz-software/kephas/wiki and https://github.com/quartz-software/kephas/tree/master/Samples.
          Kephas Framework ("stone" in aramaic) is an ambitious project aiming to deliver a framework for an application ecosystem.
      </PackageReleaseNotes>
      <NeutralLanguage>en</NeutralLanguage>
      <SignAssembly>True</SignAssembly>
      <AssemblyOriginatorKeyFile>..\Kephas.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ServiceStack.Text" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Kephas.Core\Kephas.Core.csproj" />
  </ItemGroup>

</Project>
