<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netcoreapp3.1;netcoreapp2.2;net461;net452</TargetFrameworks>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <Choose>
        <When Condition="'$(TargetFramework)'=='net461' or '$(TargetFramework)'=='net45'">
        </When>
        <Otherwise>
            <ItemGroup>
                <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.1.0" />
            </ItemGroup>
        </Otherwise>
    </Choose>

    <ItemGroup>
      <Compile Remove="EntityModel\**" />
      <EmbeddedResource Remove="EntityModel\**" />
      <None Remove="EntityModel\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="stylecop.json" />
    </ItemGroup>

    <ItemGroup>
      <AdditionalFiles Include="stylecop.json" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="NSubstitute" Version="4.2.0" />
        <PackageReference Include="NUnit" Version="3.12.0" />
        <PackageReference Include="NUnit3TestAdapter" Version="3.15.0" />
        <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Kephas.Core\Kephas.Core.csproj" />
        <ProjectReference Include="..\..\Kephas.Data\Kephas.Data.csproj" />
        <ProjectReference Include="..\..\Kephas.Data.LLBLGen\Kephas.Data.LLBLGen.csproj" />
    </ItemGroup>

</Project>