<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
      <RootNamespace>Kephas.ServiceStack</RootNamespace>
      <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
      <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
      <Version>5.0.0</Version>
      <AssemblyVersion>5.0.0.0</AssemblyVersion>
      <FileVersion>5.0.0.0</FileVersion>
      <Authors>Kephas Software SRL</Authors>
      <Company>Kephas Software SRL</Company>
      <Product>Kephas Framework</Product>
      <Description>Provides integration with the ServiceStack framework.</Description>
      <Copyright>Copyright Kephas Software SRL 2010-2018</Copyright>
      <PackageLicenseUrl>http://opensource.org/licenses/MIT</PackageLicenseUrl>
      <PackageProjectUrl>https://github.com/quartz-software/kephas</PackageProjectUrl>
      <PackageIconUrl>http://kephas-framework.com/Media/Default/Logo/kephas.logo.transparent.png</PackageIconUrl>
      <RepositoryUrl>https://github.com/quartz-software/kephas</RepositoryUrl>
      <RepositoryType>github</RepositoryType>
      <PackageTags>kephas framework servicestack</PackageTags>
      <PackageReleaseNotes>
          Check the documentation and the samples from https://github.com/quartz-software/kephas/wiki and https://github.com/quartz-software/kephas/tree/master/Samples.
          Kephas Framework ("stone" in aramaic) is an ambitious project aiming to deliver a framework for an application ecosystem.
      </PackageReleaseNotes>
      <NeutralLanguage>en</NeutralLanguage>
      <SignAssembly>false</SignAssembly>
      <AssemblyOriginatorKeyFile>..\Kephas.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
    <DocumentationFile>bin\Debug\netstandard2.0\Kephas.ServiceStack.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <LangVersion>latest</LangVersion>
    <DocumentationFile>bin\Release\netstandard2.0\Kephas.ServiceStack.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ServiceStack" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Kephas.Core\Kephas.Core.csproj" />
    <ProjectReference Include="..\Kephas.Serialization.ServiceStack.Text\Kephas.Serialization.ServiceStack.Text.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="ServiceStack">
      <HintPath>..\..\Packages\ServiceStack.5.0.0\lib\net45\ServiceStack.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
