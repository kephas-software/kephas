<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.5</TargetFramework>
    <AssemblyName>Kephas.Data.MongoDB</AssemblyName>
    <RootNamespace>Kephas.Data.MongoDB</RootNamespace>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\Kephas.snk</AssemblyOriginatorKeyFile>
    <Version>3.3.0</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <Authors>Quartz Software SRL</Authors>
    <Company>Quartz Software SRL</Company>
    <Product>Kephas Framework</Product>
    <Description>Provides the model for data, including the Entity classifier and the related scope dimensions.</Description>
    <Copyright>Copyright Quartz Software SRL 2010-2017</Copyright>
    <PackageLicenseUrl>http://opensource.org/licenses/MIT</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/quartz-software/kephas</PackageProjectUrl>
    <PackageIconUrl>http://kephas-framework.com/Media/Default/Logo/kephas.logo.transparent.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/quartz-software/kephas</RepositoryUrl>
    <PackageTags>kephas framework messaging request response service layer quartz software</PackageTags>
    <RepositoryType>github</RepositoryType>
    <PackageReleaseNotes>Check the documentation and the samples from https://github.com/quartz-software/kephas/wiki and https://github.com/quartz-software/kephas/tree/master/Samples.
        Kephas Framework ("stone" in aramaic) is an ambitious project aiming to deliver a framework for an application ecosystem.</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard1.5\Kephas.Data.MongoDB.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard1.5\Kephas.Data.MongoDB.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Kephas.snk" Link="Kephas.snk" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Bson.signed" Version="2.4.0" />
    <PackageReference Include="MongoDB.Driver.Core.signed" Version="2.4.0" />
    <PackageReference Include="MongoDB.Driver.signed" Version="2.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Kephas.Core\Kephas.Core.csproj" />
    <ProjectReference Include="..\Kephas.Data\Kephas.Data.csproj" />
  </ItemGroup>

</Project>